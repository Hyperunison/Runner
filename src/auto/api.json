{
    "openapi": "3.0.0",
    "info": {
        "title": "Unison agent API",
        "description": "API for opensource nextflow runner agent. A federation node",
        "version": "1.0.0"
    },
    "paths": {
        "\/api\/agent\/v{version}\/{token}\/task": {
            "get": {
                "tags": [
                    "Agent"
                ],
                "operationId": "getNextTask",
                "parameters": [
                    {
                        "name": "version",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "pattern": "[\\d.]+"
                        }
                    },
                    {
                        "name": "token",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "pattern": "[\\da-f]+"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get next task for runner agent",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "$ref": "#\/components\/schemas\/RunnerMessage"
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "No tasks",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
