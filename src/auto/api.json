                    {
                        "name": "token",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "pattern": "[\\da-f]+"
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Result",
                        "content": {
                            "application\/json": {
                                "schema": {}
                            }
                        }
                    }
                }
            }
        },
        "\/api\/agent\/v{version}\/{token}\/task\/{id}": {
            "post": {
                "tags": [
                    "Agent"
                ],
                "operationId": "acceptTask",
                "parameters": [
                    {
                        "name": "version",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "pattern": "[\\d.]+"
                        }
